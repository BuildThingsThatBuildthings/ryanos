{
  "dashboard": {
    "id": null,
    "title": "Fitness Tracker - Application Dashboard",
    "tags": ["fitness-tracker", "application"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Application Health Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"fitness-tracker-backend\"}",
            "legendFormat": "Backend Status",
            "refId": "A"
          },
          {
            "expr": "postgres_up",
            "legendFormat": "Database Status",
            "refId": "B"
          },
          {
            "expr": "redis_up",
            "legendFormat": "Redis Status",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "DOWN",
                    "color": "red"
                  },
                  "1": {
                    "text": "UP",
                    "color": "green"
                  }
                },
                "type": "value"
              }
            ],
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 4,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "HTTP Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"fitness-tracker-backend\"}[5m])",
            "legendFormat": "{{method}} {{handler}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Requests/sec"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "HTTP Response Status Codes",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"fitness-tracker-backend\"}[5m])",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "stack": true,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 4
        }
      },
      {
        "id": 4,
        "title": "Response Time Distribution",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=\"fitness-tracker-backend\"}[5m]))",
            "legendFormat": "50th percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"fitness-tracker-backend\"}[5m]))",
            "legendFormat": "95th percentile",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket{job=\"fitness-tracker-backend\"}[5m]))",
            "legendFormat": "99th percentile",
            "refId": "C"
          }
        ],
        "yAxes": [
          {
            "label": "Seconds"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 12
        }
      },
      {
        "id": 5,
        "title": "Database Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "postgres_stat_database_numbackends",
            "legendFormat": "Active connections - {{datname}}",
            "refId": "A"
          },
          {
            "expr": "postgres_settings_max_connections",
            "legendFormat": "Max connections",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Connections"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 20
        }
      },
      {
        "id": 6,
        "title": "Database Query Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(postgres_stat_database_xact_commit[5m])",
            "legendFormat": "Commits/sec - {{datname}}",
            "refId": "A"
          },
          {
            "expr": "rate(postgres_stat_database_xact_rollback[5m])",
            "legendFormat": "Rollbacks/sec - {{datname}}",
            "refId": "B"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 20
        }
      },
      {
        "id": 7,
        "title": "Redis Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "redis_memory_used_bytes",
            "legendFormat": "Used memory",
            "refId": "A"
          },
          {
            "expr": "redis_memory_max_bytes",
            "legendFormat": "Max memory",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Bytes"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 28
        }
      },
      {
        "id": 8,
        "title": "Redis Operations",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(redis_commands_total[5m])",
            "legendFormat": "{{cmd}}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 28
        }
      },
      {
        "id": 9,
        "title": "System Resource Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "100 - (avg by(instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "CPU Usage - {{instance}}",
            "refId": "A"
          },
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
            "legendFormat": "Memory Usage - {{instance}}",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Percent",
            "max": 100
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 36
        }
      },
      {
        "id": 10,
        "title": "Container Resource Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{name=~\"fitness-tracker.*\"}[5m]) * 100",
            "legendFormat": "CPU - {{name}}",
            "refId": "A"
          },
          {
            "expr": "container_memory_usage_bytes{name=~\"fitness-tracker.*\"} / 1024 / 1024",
            "legendFormat": "Memory (MB) - {{name}}",
            "refId": "B"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 44
        }
      },
      {
        "id": 11,
        "title": "Business Metrics",
        "type": "stat",
        "targets": [
          {
            "expr": "active_users_24h",
            "legendFormat": "Active Users (24h)",
            "refId": "A"
          },
          {
            "expr": "rate(user_registrations_total[1h]) * 3600",
            "legendFormat": "New Users/Hour",
            "refId": "B"
          },
          {
            "expr": "total_workouts_completed_today",
            "legendFormat": "Workouts Completed Today",
            "refId": "C"
          },
          {
            "expr": "total_exercises_logged_today",
            "legendFormat": "Exercises Logged Today",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "none"
          }
        },
        "gridPos": {
          "h": 4,
          "w": 24,
          "x": 0,
          "y": 52
        }
      },
      {
        "id": 12,
        "title": "Error Rate by Endpoint",
        "type": "table",
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"5..\",job=\"fitness-tracker-backend\"}[5m]) by (handler)",
            "format": "table",
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true
              },
              "renameByName": {
                "handler": "Endpoint",
                "Value": "Error Rate (req/s)"
              }
            }
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 56
        }
      },
      {
        "id": 13,
        "title": "Top API Endpoints by Request Volume",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, rate(http_requests_total{job=\"fitness-tracker-backend\"}[5m]) by (handler))",
            "format": "table",
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "renameByName": {
                "handler": "Endpoint",
                "Value": "Requests/sec"
              }
            }
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 56
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(up, instance)",
          "refresh": 1,
          "includeAll": true,
          "allValue": null
        },
        {
          "name": "interval",
          "type": "interval",
          "options": [
            {
              "text": "1m",
              "value": "1m",
              "selected": false
            },
            {
              "text": "5m",
              "value": "5m",
              "selected": true
            },
            {
              "text": "10m",
              "value": "10m",
              "selected": false
            },
            {
              "text": "30m",
              "value": "30m",
              "selected": false
            },
            {
              "text": "1h",
              "value": "1h",
              "selected": false
            }
          ],
          "current": {
            "text": "5m",
            "value": "5m"
          }
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "expr": "changes(fitness_tracker_info[1h]) > 0",
          "textFormat": "Deployment",
          "titleFormat": "Application Deployment",
          "iconColor": "blue"
        }
      ]
    }
  }
}